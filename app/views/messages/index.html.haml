.wrapper
  %p.create-message
    チャットグループが作成されました。
  .side-bar
    .header
      %h3.header__name
        never-stop
      %ul.header__lists
        %li.list
          = link_to '/' do
            %i.fa.fa-edit.icon
        %li.list
          = link_to '/' do
            %i.fa.fa-cog.icon
    .groups
      .group
        .group__name
          Politics
        .group__message
          persistent
  .chat
    .header
      .left-header
        .left-header__title
          Politics
        %ul.left-header__members
          Member :
          %li.members
            never_stop
      .right-header
        %a.right-header__button
          Edit
    .messages
      .message
        .upper-message
          .upper-message__user-name
            aoki
          .upper-message__date
            2018/02/11 17:01
        .lower-message
          %p.lower-message__content
            just do it
    %form.form
      %input.form__message{placeholder: "type a message"}
      .form__mask
        %label.form__mask__image
          %i.fa.fa-image.icon
          %input.hidden{type: "file"}
      %input.form__submit{type: "submit", value: "Send"}
