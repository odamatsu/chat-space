.wrapper
  .side-bar
    .header
      %h3.header__name
        = current_user.name
      %ul.header__lists
        %li.list
          = link_to new_group_path do
            -# %i.fa.fa-edit.icon
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          = link_to edit_user_path(current_user) do
            -# %i.fa.fa-cog.icon
            = fa_icon 'cog', class: 'icon'
    .groups
      .group
        .group__name
          Politics
        .group__message
          persistent
  .chat
    .header
      .left-header
        .left-header__title
          Politics
        %ul.left-header__members
          Member :
          %li.members
            never_stop
      .right-header
        %a.right-header__button
          Edit
    .messages
      .message
        .upper-message
          .upper-message__user-name
            aoki
          .upper-message__date
            2018/02/11 17:01
        .lower-message
          %p.lower-message__content
            just do it
    %form.form
      %input.form__message{placeholder: "type a message"}
      .form__mask
        %label.form__mask__image
          %i.fa.fa-image.icon
          %input.hidden{type: "file"}
      %input.form__submit{type: "submit", value: "Send"}
